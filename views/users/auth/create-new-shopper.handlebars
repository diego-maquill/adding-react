<!-- stylesheet -->
<link rel="stylesheet" href="/public/css/user-gui/user-auth.css">
<!-- script -->
<script src="/public/js/user/auth/create-shopper-account.js"></script>
<!-- stylesheet -->

<!-- Create shopper starts from here -->
<article class="auth create-new-shopper">

    <!-- shopper create new section starts from here -->
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

        <!-- shopper create new section starts frome here -->
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="create-new-head">
                <h1 class="panel-title">
                    Create a new Acccount
                </h1>
            </div>
            <div id="create-new-panel" class="panel-collapse collapse in" role="tabpanel"
                aria-labelledby="create-new-head">
                <div class="panel-body">

                    <div class="col-md-12">
                        <div class="row">

                            <!-- shopper create new form starts from here -->
                            <form id="form-shopper-create">

                                <!-- alert notification -->
                                <div class="row">
                                    <div class="col-md-12">
                                        <div id="error-create" class="alert alert-danger hidden">
                                            <i class="fa fa-close error" id="btn-error-close" onclick="close()"></i>
                                            <strong id="error-create-message"></strong>
                                        </div>
                                        <div id="success-create" class="alert alert-success hidden">
                                            <i class="fa fa-spinner fa-pulse fa-fw success"></i>
                                            <strong>You're account has been created successfully! Now preparing your
                                                dashboard.</strong>
                                        </div>
                                    </div>
                                </div>

                                <!-- shopper name section -->
                                <div class="row">
                                    <div class="col-md-4 col-md-offset-1 text-left">
                                        <label for="name">Name</label>
                                    </div>
                                    <div class="col-md-6 ">
                                        <input type="text" class="form-control" name="name" id="name" />
                                    </div>
                                </div>

                                <!-- shopper email id section -->
                                <div class="row">
                                    <div class="col-md-4 col-md-offset-1 text-left">
                                        <label for="email">Email Id</label>
                                    </div>
                                    <div class="col-md-6 ">
                                        <input type="text" class="form-control" name="email" id="email" />
                                    </div>
                                </div>

                                <!-- shopper mobile section -->
                                <div class="row">
                                    <div class="col-md-4 col-md-offset-1 text-left">
                                        <label for="mobile">Contact Number</label>
                                    </div>
                                    <div class="col-md-6 ">
                                        <input type="text" class="form-control" name="mobile" id="mobile"
                                            onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                                            maxlength="10" />
                                    </div>
                                </div>

                                <!-- shopper password section -->
                                <div class="row">
                                    <div class="col-md-4 col-md-offset-1 text-left">
                                        <label for="password">Password</label>
                                    </div>
                                    <div class="col-md-6 ">
                                        <input type="password" class="form-control" name="password" id="password" />
                                    </div>
                                </div>

                                <!-- shopper confirm password section -->
                                <div class="row">
                                    <div class="col-md-4 text-left col-md-offset-1">
                                        <label for="confirm-password">Confirm Password</label>
                                    </div>
                                    <div class="col-md-6 ">
                                        <input type="password" class="form-control" id="confirm-password" />
                                    </div>
                                </div>

                                <!-- shopper submit form section -->
                                <input type="button" class="btn btn-default" id="btn-shopper-create"
                                    onclick="createAccount()" value="Create Account" />

                            </form>
                            <!-- shopper create new form ends here -->

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- shopper create new sections ends here -->

    </div>
    <!-- shopper create new section ends here -->

</article>
<!-- Create shopper ends here -->